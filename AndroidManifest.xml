<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.acs.mainmenu"
      android:versionCode="3"
      android:versionName="3.0">
	  <uses-sdk android:minSdkVersion="8" />
    	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
    	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	  
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="false" >
        <activity android:name=".AcsMainMenuActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SetUp" 
        			android:label="eDelivery">
        		<intent-filter >
        			<action android:name="android.intent.action.VIEW" />
        			<category android:name="android.intent.category.DEFAULT" />
        		</intent-filter>
        </activity>
        <activity android:name=".GetDeliveries" 
        			android:label="eDelivery">
        		<intent-filter >
        			<action android:name="android.intent.action.VIEW" />
        			<category android:name="android.intent.category.DEFAULT" />
        		</intent-filter>
        </activity>
        <activity android:name=".GetSignature" 
        			android:label="eDelivery"
        			android:configChanges="orientation|keyboardHidden">
        		<intent-filter >
        			<action android:name="android.intent.action.VIEW" />
        			<category android:name="android.intent.category.DEFAULT" />
        		</intent-filter>
        </activity>
        <activity android:name=".SignatureActivity" 
        			android:label="eDelivery"
        			android:configChanges="keyboardHidden|orientation"
        			android:screenOrientation="landscape">
        		<intent-filter >
        			<action android:name="android.intent.action.CAPTURE" />
        			<category android:name="android.intent.category.DEFAULT" />
        			<category android:name="android.intent.category.BROWSABLE" />
        		</intent-filter>
        </activity>
        <activity android:name=".SendDeliveries" 
        			android:label="eDelivery">
        		<intent-filter >
        			<action android:name="android.intent.action.VIEW" />
        			<category android:name="android.intent.category.DEFAULT" />
        		</intent-filter>
        </activity>
        <activity android:name=".MultiList"
            	android:label="eDelivery">
        		<intent-filter >
        			<action android:name="android.intent.action.VIEW" />
        			<category android:name="android.intent.category.DEFAULT" />
        		</intent-filter>
        </activity>
        <activity android:name=".GetPassword" android:label="eDelivery">
        		<intent-filter >
        			<action android:name="android.intent.action.VIEW" />
        			<category android:name="android.intent.category.DEFAULT" />
        		</intent-filter>
            
        </activity>
        <activity android:name=".LogIn" android:label="eDelivery">
        		<intent-filter >
        			<action android:name="android.intent.action.VIEW" />
        			<category android:name="android.intent.category.DEFAULT" />
        		</intent-filter>
            
        </activity>
        </application>
</manifest>